<div class="container">
    <table class="table mx-auto w-auto table-borderless my-4">
      <thead>
        <tr>
          <th>Users</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < users.length; i++) { %>
            <tr>
                <td>
                    <a href="/userData/edit/<%= users[i].id %>" >
                        <%= users[i].username %>
                    </a>
            </td>
                <td>
                    <a href="/users/userData/edit/<%= users[i].id %>" class="btn btn-info">Update</a>
                    <a href="/users/usersManagement/delete/<%= users[i].id %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% } %>
      </tbody>
    </table>
    <div class="text-center">
        <a href="/users/userData/displayAddPage" class="btn btn-success">Add New</a>
    </div>
  </div>